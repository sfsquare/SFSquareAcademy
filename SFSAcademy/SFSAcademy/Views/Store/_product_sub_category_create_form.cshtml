@model SFSAcademy.STORE_SUB_CATEGORY


@using (Html.BeginForm("SubCategoriesCreate", "Store", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="box">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="label-field-pair">
        @Html.LabelFor(model => model.NAME, "Sub Category Name:", htmlAttributes: new { @class = "control-label col-md-2" })
        <span class="necessary-field" style="font-size:small">* Required Field</span>
        <div class="text-input-bg">
            @Html.EditorFor(model => model.NAME, new { htmlAttributes = new { @class = "form-control", required = "required" } })
            @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="label-field-pair label">
        @Html.LabelFor(model => model.STORE_CATEGORY_ID, "Store Category:", htmlAttributes: new { @class = "control-label col-md-2" })
        <span class="necessary-field" style="font-size:small">* Required Field</span>
        <div class="text-input-bg">
            @Html.DropDownList("CATEGORY_ID", null, htmlAttributes: new { @class = "form-control", @disabled = "disabled" })
            @Html.ValidationMessageFor(model => model.STORE_CATEGORY_ID, "", new { @class = "text-danger" })
            @Html.Hidden("CATEGORY_ID", "CATEGORY_ID")
        </div>
    </div>

    <div class="label_field_pair label">
        <label class="label_for_student_gender" for="student_gender">Is this Active ?</label>
        <div class="student_gender_value">
            @Html.RadioButtonFor(model => model.IS_ACT, true, true)@Html.Label("Yes")
            @Html.RadioButtonFor(model => model.IS_ACT, false, false)@Html.Label("No")
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="► Save" class="user_button" />
        </div>
    </div>
</div>
}