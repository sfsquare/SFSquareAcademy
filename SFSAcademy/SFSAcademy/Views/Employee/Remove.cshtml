@model SFSAcademy.EMPLOYEE

@{
    IEnumerable<SFSAcademy.EMPLOYEE> associate_employee = (IEnumerable<SFSAcademy.EMPLOYEE>)ViewData["associate_employee"];
}
@{
    ViewBag.Title = "Remove";
}

<div id="content-header">
    <img src="~/Content/images/HR/show_hr.png" alt="HR Logo">
    <h1>Employee</h1>
    <h3>Remove Employee</h3>
    <div id="app-back-button">
        <a href='javascript:history.back()' onclick="return confirm('are you sure?')"><img src="~/Content/images/buttons/back.png"></a>
    </div>
</div>
<div><img src="~/Content/images/_global/header_underline_.jpg" style="width:100%"></div>
@if (ViewBag.ErrorMessage != null)
{
    <p class="flash-msg"> @ViewBag.ErrorMessage </p>
}
<div id="page-yield">
    @if (ViewBag.Notice != null)
    {
        <p class="flash-msg"> @ViewBag.Notice </p>
    }
    <div id="student-details">
        <h4> @Model.FIRST_NAME |  Employee Number  : @Model.EMP_NUM | Department : @Model.EMPLOYEE_DEPARTMENT.NAMES </h4>
    </div>
    <div class="extender"> </div>
    <div class="box">
        <div class="link-box">
            <div class="link-heading">@Html.ActionLink("Employee leaving Institution", "Change_To_Former", new { id = Model.ID }) </div>
            <div class="link-descr">For employee leaving the Institution, use this option to remove them from the list of active employee and place them in the former employees list.</div>
        </div>
        <div class="link-box">
            <div class="link-heading">@Html.ActionLink("Remove employee records", "Delete", new { id = Model.ID }, new { @onclick = "return confirm('are you sure?')" }) </div>
            <div class="link-descr">Completely delete employee's records from the Institution's databases. Use this option only if you created the employee record by accident and want to remove it completely.</div>
        </div>
    </div>
</div>

