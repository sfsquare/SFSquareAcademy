
@{
    ViewBag.Title = "Setting";
}

<div id="content-header">
    <img src="~/Content/images/show_store.png" alt="Settings Logo" />
    <h1>Store</h1>
    <h3>Settings</h3>
    <div id="app-back-button">
        <a href='javascript:history.back()' onclick="return confirm('are you sure?')"><img src="~/Content/images/buttons/back.png" /></a>
    </div>
</div>
<div><img src="~/Content/images/_global/header_underline_.jpg" style="width:100%" /></div>

<div id="page-yield">
    <div class="box">
        <div class="link-box">
            <div class="link-heading">@Html.ActionLink("Manage Product Category", "Categories")</div>
            <div class="link-descr">Manage Product Categories and Sub Categories</div>
        </div>

        <div class="link-box">
            <div class="link-heading">@Html.ActionLink("Add Vendor", "Vendor")</div>
            <div class="link-descr">Add/Edit Vendors supplying products to Store</div>
        </div>

        <div class="link-box">
            <div class="link-heading">@Html.ActionLink("Add Brand", "Brand")</div>
            <div class="link-descr">Add/Edit Brands of products sold in Store</div>
        </div>

        <div class="link-box">
            <div class="link-heading">@Html.ActionLink("Manage Procurement Status", "PurchageStatus")</div>
            <div class="link-descr">Define and manage Procurement Statuses for products</div>
        </div>
        <div class="extender"></div>
    </div>
</div>



