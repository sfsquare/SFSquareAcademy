@model SFSAcademy.STORE_SUB_CATEGORY

<div id="content-header">
    <img src="~/Content/images/show_store.png" alt="Store Logo">
    <h1>Store</h1>
    <h3>Edit Sub Categories</h3>
    <div id="app-back-button">
        <a href='javascript:history.back()' onclick="return confirm('are you sure?')"><img src="~/Content/images/buttons/back.png"></a>
    </div>
</div>
<div><img src="~/Content/images/_global/header_underline_.jpg" width="100%"></div>
<div class="bread_crumb">
    @Html.ActionLink("Store", "Index") &raquo;
    @Html.ActionLink("Store Category", "Categories") &raquo;
    Store Sub Categories Edit
</div>
<div id="flash_box">
    @if (ViewBag.SubCatEditMessage != null)
            {
        <p class="flash-msg"> @ViewBag.SubCatEditMessage </p>
    }
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="page-yield">
        @Html.HiddenFor(model => model.ID)
        <div id="edit_user_form">
            <div class="label-field-pair label">
                @Html.LabelFor(model => model.NAME, "Sub Category Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="text-input-bg">
                    @Html.EditorFor(model => model.NAME, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="label_field_pair label">
                <label class="label_for_student_gender" for="student_gender">Is this Active ?</label>
                <div class="student_gender_value">
                    @Html.RadioButtonFor(model => model.IS_ACT, true, true)@Html.Label("Yes")
                    @Html.RadioButtonFor(model => model.IS_ACT, false, false)@Html.Label("No")
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="user_button" />
                </div>
            </div>

        </div>
    </div>
}
