@model IEnumerable<SFSAcademy.BATCH>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.START_DATE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.END_DATE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IS_DEL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EMP_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.COURSE.CRS_NAME)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NAME)
            </td>
            <td>
                @if (!item.START_DATE.Equals(null))
                {
                    @item.START_DATE.Value.ToShortDateString()
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.END_DATE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IS_DEL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EMP_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.COURSE.CRS_NAME)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { style = "text-decoration:underline" }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { style = "text-decoration:underline" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { style = "text-decoration:underline" })
            </td>
        </tr>
    }

</table>
