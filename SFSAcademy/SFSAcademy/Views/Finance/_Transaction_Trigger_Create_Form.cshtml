@model SFSAcademy.FINANCE_TRANSACTION_TRIGGERS
@using SFSAcademy.Models
<label class="head_label">Create Automatic Transaction<span></span></label>
@using (Html.BeginForm("Transaction_Trigger_Create", "Finance", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div id="form-errors"></div>
    <div class="label-field-pair">
        <div class="label-container">@Html.LabelFor(model => model.FIN_CAT_ID, "Category", htmlAttributes: new { @class = "control-label col-md-2" })</div>
        <div class="input-container">
            @Html.DropDownList("FIN_CAT_ID", null, htmlAttributes: new { @class = "input-container" })
            @Html.ValidationMessageFor(model => model.FIN_CAT_ID, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="label-field-pair">
        <div class="label-container">@Html.LabelFor(model => model.PCT, "Percentage", htmlAttributes: new { @class = "control-label col-md-2" })</div>
        <div class="input-container">
            @Html.EditorFor(model => model.PCT, new { htmlAttributes = new { @class = "form-control"} })
            @Html.ValidationMessageFor(model => model.PCT, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="label-field-pair">
        <div class="label-container">@Html.LabelFor(model => model.TIL, "Title", htmlAttributes: new { @class = "control-label col-md-2" })</div>
        <div class="input-container">
            @Html.EditorFor(model => model.TIL, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TIL, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="label-field-pair">
        <div class="label-container">@Html.LabelFor(model => model.DESCR, "Description", htmlAttributes: new { @class = "control-label col-md-2" })</div>
        <div class="input-container">
            @Html.EditorFor(model => model.DESCR, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DESCR, "", new { @class = "text-danger" })
        </div>
    </div>
    <input type="submit" value="► Save" class="submit_button" />
}


