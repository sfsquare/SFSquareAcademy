<div id="sub_categories_select">
    <div class="label-field-pair">
        <div class="timetable_entry_course_id">@Html.Label("SUB_CATEGORY_ID", "Select Sub Category :", htmlAttributes: new { @class = "control-label col-md-2" })</div>
        <div class="text-input-bg">
            @Html.DropDownList("SUB_CATEGORY_ID", null, htmlAttributes: new { @class = "form-control", @id = "SubCategoryDropDown", @onChange = "show_products()" })
            <div class="LoaderBox"><img src="~/Content/images/loader.gif" id="loader" alt="Finance Logo" style="align-self:center; border:none"></div>
            @Html.ValidationMessage("SUB_CATEGORY_ID", "", new { @class = "text-danger" })
        </div>
    </div>
</div>
