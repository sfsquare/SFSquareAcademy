@model SFSAcademy.Student

@{
    IEnumerable<SFSAcademy.StudentsGuardians> guardians = (IEnumerable<SFSAcademy.StudentsGuardians>)ViewData["guardians"];
}

@{
    Layout = null;
}
<link rel="stylesheet" id="stylesheet" type="text/css" href="~/Content/stylesheets/student/generate_tc_pdf.css">
<br />
