@model PagedList.IPagedList<SFSAcademy.Models.FeeDiscount>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Fee_Discounts";
}
<script type="text/javascript">
    function redirect(dropDownValue) {
        window.location.href = '/Finance/_Update_Master_Fee_Category_List/' + dropDownValue;
    }
</script>
<div id="content-header">
    <img src="~/Content/images/show_finance.png" alt="Finance Logo">
    <h1>Finance Management</h1>
    <h3>Fee Discounts</h3>
    <div id="app-back-button">
        <a href='javascript:history.back()' onclick="return confirm('are you sure?')"><img src="~/Content/images/buttons/back.png"></a>
    </div>
</div>
<div><img src="~/Content/images/_global/header_underline_.jpg" style="width:100%"></div>

<div id="inner-tab-menu">
    <ul>
        <li>@Html.ActionLink("Create Discount", "Fee_Discount_New") </li>
    </ul>
</div>
<div id="page-yield">
    <div id="flash_box"> </div>
    <div id="flash-notice"></div>
    <div class="bread_crumb">
        @Html.ActionLink("Finance", "Index") &raquo;
        @Html.ActionLink("Fees", "Fees_Index") &raquo;
        @Html.ActionLink("Create Fees", "Master_Fees") &raquo;
        Fee Discounts
    </div>

    <div id="search_box_bg">
        <div id="searchbox">
            <form name="search-form" id="search-form" action="" style="display:inline;">
                @using (Html.BeginForm("Fee_Discounts", "Finance", FormMethod.Get))
                {
                    <div class="label-field-pair label">
                        @Html.Label("BTCH_ID", "Select A Course :", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="text-input-bg">
                            @Html.DropDownList("BTCH_ID", null, htmlAttributes: new { @class = "_select_change" })
                        </div>
                    </div>
                    <div class="label-field-pair label">
                        @Html.Label("FINANCE_FEE_CATGEORY_ID", "Select a Fees Category :", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="text-input-bg">
                            @Html.DropDownList("FINANCE_FEE_CATGEORY_ID", null, htmlAttributes: new { @class = "_select_change" })
                        </div>
                    </div>
                    <p><input type="submit" value="Search Discounts" class="submit-button" /></p>
                }
            </form>
        </div>
    </div>

    <div class="students-table">
        <table id="listing" align="center" style="width:100%" cellpadding="1" cellspacing="1">
            <tr class="tr-head">
                <th>
                    Sl. No.
                </th>
                <th>
                    @Html.ActionLink("Batch", "Fee_Discounts", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    @Html.ActionLink("Discount Date", "Fee_Discounts", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
                </th>
                <th>
                    Discount Name
                </th>
                <th>
                    Discount Description
                </th>
                <th>
                    Fee Category
                </th>
                <th>
                    Student Category
                </th>
                <th>
                    Student Name
                </th>
                <th>
                    Fee Collection Name
                </th>
                <th>
                    Discount
                </th>
                @if (Html.CurrentUser_UserType().Equals("Admin"))
                {
                    <th></th>
                }
            </tr>
            <tr class="tr-blank"></tr>
            @{int i = 1; }
            @foreach (var item in Model)
            {
                string selectedRow = "tr-even";
                if (i % 2 == 0)
                {
                    selectedRow = "tr-odd";
                }
            <tr class="@selectedRow">
                <td class="col-1">@i</td>
                <td class="col-2">
                    @Html.DisplayFor(modelItem => item.CourseData.CODE)
                    <label>-</label>
                    @Html.DisplayFor(modelItem => item.BatchData.NAME)
                </td>
                @if (item.FeeDiscountData.DISC_DATE != null)
                {
                    <td class="col-2">
                        @item.FeeDiscountData.DISC_DATE.Value.ToShortDateString()
                    </td>
                }
                else
                {
                    <td class="col-2"></td>
                }
                <td class="col-3">
                    @Html.DisplayFor(modelItem => item.FeeDiscountData.NAME)
                </td>
                <td class="col-3">
                    @Html.DisplayFor(modelItem => item.FeeDiscountData.DESCR)
                </td>

                <td class="col-4">
                    @Html.DisplayFor(modelItem => item.FinanceFeeCategoryData.NAME)
                </td>
                <td class="col-5">
                    @Html.DisplayFor(modelItem => item.StudentCategoryData.NAME)
                </td>
                <td class="col-6">
                    @Html.DisplayFor(modelItem => item.StudentData.FIRST_NAME) @Html.DisplayFor(modelItem => item.StudentData.MID_NAME) @Html.DisplayFor(modelItem => item.StudentData.LAST_NAME)
                </td>
                <td class="col-7">
                    @Html.DisplayFor(modelItem => item.FeeCollectionData.NAME)
                </td>
                <td class="col-8" nowrap>
                    @Html.DisplayFor(modelItem => item.FeeDiscountData.DISC)
                </td>
                @if (Html.CurrentUser_UserType().Equals("Admin"))
                {
                    <td class="col-9" nowrap>
                        @Html.ActionLink("Edit ", "Edit_Fee_Discount", new { id = item.FeeDiscountData.ID }, new { style = "text-decoration:underline" })|@Html.ActionLink(" Delete", "Delete_Fee_Discount", new { id = item.FeeDiscountData.ID }, new { style = "text-decoration:underline" })
                    </td>
                }

            </tr>
                i = i + 1;
            }
        </table>
        <br />
        @Html.PagedListPager(Model, page => Url.Action("Fee_Discounts",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
    </div>

    <div id="master-category-box">
    </div>
    <div id="discount-box"></div>
    <div id="modal-box" style="display:none;"></div>
</div>


