@model IEnumerable<SFSAcademy.Models.Student>

@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script>
    $(document).ready(function () {
        $("#StdList").hide();
        function Contains(text_one, text_two) {
            if (text_one.indexOf(text_two) != -1)
                return true;
        }
        $("#Search").keyup(function () {
            var searchText = $("#Search").val().toLowerCase();
            $(".Search").each(function () {
                if (!Contains($(this).text().toLowerCase(), searchText)) {
                    $("#StdList").show();
                    $(this).hide();
                }
                else {
                    $("#StdList").show();
                    $(this).show();
                }
            });
            if ($("#Search").val() == '') {
                $("#StdList").hide();
            }
        });
    });

</script>
<div id="content-header">
    <img src="~/Content/images/student_details/student_details_logo.jpg" alt="Student Details Logo">
    <h1>Student Details</h1>
    <h3>View Details</h3>
    <div id="app-back-button">
        <a href='javascript:history.back()' onclick="return confirm('are you sure?')"><img src="~/Content/images/buttons/back.png"></a>
    </div>
</div>
<div><img src="~/Content/images/_global/header_underline_.jpg" width="100%"></div>

<div id="inner-tab-menu">
    <ul>
        <li>@Html.ActionLink("View All", "ViewAll")</li>
        <li>@Html.ActionLink("Advanced", "AdvancedSearch")</li>
    </ul>
</div>
<p class="flash-msg">*Enter First Name, Last Name, Admission Number or Grade Code to search students.</p>
<div class="container">
    <div class="form-group">
        <div id="flash_box">
            @if (ViewBag.ErrorMessage != null)
            {
                <p class="flash-msg"> @ViewBag.ErrorMessage </p>
            }
        </div>
        <div class="input-group">
            <img src="~/Content/images/search_icon.png">
            <input type="text" id="Search" placeholder="Search" class="form-control" />
        </div>
    </div>
    <br />
    <div class="students-table" id="StdList">
        <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1" class="table table-striped">
            <tr class="tr-head">
                <th>
                    Sl. No.
                </th>
                <th>
                    Admission No.
                </th>
                <th>
                    Name
                </th>
                <th>
                    Batch
                </th>
            </tr>
            <tr class="tr-blank"></tr>
            @{int i = 1; }
            @foreach (var item in Model)
            {
                string selectedRow = "tr-even";
                if (i % 2 == 0)
                {
                    selectedRow = "tr-odd";
                }
                <tr class="Search @selectedRow">
                    <td class="col-1">
                        @i
                    </td>
                    <td class="col-3">
                        @Html.ActionLink(item.StudentData.ADMSN_NO, "Profiles", new { id = item.StudentData.ID }, new { style = "text-decoration:underline" })
                    </td>
                    <td class="col-2" nowrap>
                        @Html.DisplayFor(modelItem => item.StudentData.FIRST_NAME) @Html.DisplayFor(modelItem => item.StudentData.MID_NAME) @Html.DisplayFor(modelItem => item.StudentData.LAST_NAME)
                    </td>
                    <td class="col-4" nowrap>
                        @Html.DisplayFor(modelItem => item.CourseData.CODE)
                        <label>-</label>
                        @Html.DisplayFor(modelItem => item.BatcheData.NAME)
                    </td>

                </tr>
                i = i + 1;
            }
        </table>
        <br />
    </div>
</div>