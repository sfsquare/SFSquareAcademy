@model SFSAcademy.Student
@{
    ViewBag.Title = "BonafideCertificate";
}

<div id="content-header">
    <img src="~/Content/images/student_details/student_details_logo.jpg" alt="Student Details Logo">
    <h1>Students</h1>
    <h3>Bonafide Certificate</h3>
    <div id="app-back-button">
        <a href='javascript:history.back()' onclick="return confirm('are you sure?')"><img src="~/Content/images/buttons/back.png"></a>
    </div>
</div>
<div><img src="~/Content/images/_global/header_underline_.jpg" style="width:100%"></div>
<div class="bread_crumb">
    @Html.ActionLink("Student Details", "Index") &raquo;
    @Html.ActionLink("View All Students", "ViewAll") &raquo;
    @Html.ActionLink("Student Profile", "Profiles", new { id = Model.StudentData.ID }) &raquo;
    Bonafide Certificate
</div>
<div id="page-yield">
    <div id="student-details">
        <h3>@Model.StudentData.FIRST_NAME @Model.StudentData.MID_NAME @Model.StudentData.LAST_NAME</h3>
        <h4>Admission No. : @Model.StudentData.ADMSN_NO</h4>
        <h4>Class: @Model.CourseData.CRS_NAME - @Model.BatcheData.NAME</h4>
    </div>
    <div class="extender"> </div>
    @if (Model.StudentData.DOB == null || Model.StudentData.DOB.Value.ToShortDateString() == "31-12-9999")
    {
    <p class="flash-msg"> @Html.Label("remove_descr", "Date of Birth Certificate is not submitted by student. Bonafide Certificate can not be generated.", htmlAttributes: new { @class = "control-label col-md-2", @style = "width:100%;" }) </p>
    }
    else
    {
        <div>
            @Html.ActionLink("Generate Boanfide Certificate", "Generate_BC_pdf", new { id = Model.StudentData.ID}, new { @target = "_blank", @class = "user_button", @title = "Generate BC" })
        </div>

    }

    <div class="extender"></div>
</div>

