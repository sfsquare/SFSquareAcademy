
@{
    ViewBag.Title = "Manual_Reset";
}

<div id="content-header">
    <img src="~/Content/images/HR/leave-new.png" alt="Leave Logo">
    <h1>Manual Leave Reset</h1>
    <h3>Reset Employee Leave Manually</h3>
    <div id="app-back-button">
        <a href='javascript:history.back()' onclick="return confirm('are you sure?')"><img src="~/Content/images/buttons/back.png"></a>
    </div>
</div>
<div><img src="~/Content/images/_global/header_underline_.jpg" style="width:100%"></div>

<div id="page-yield">
    <div class="bread_crumb">
        <a href="@Url.Action("HR", "Employee")">HR</a> &raquo;
        <a href="@Url.Action("Employee_Attendance", "Employee")">Employee Leave Management</a> &raquo;
        Reset Leave
    </div>
    @if (ViewBag.Notice != null)
            {
        <p class="flash-msg"> @ViewBag.Notice </p>
    }

    <div id="box">
        <div class="link-box">
            <div class="link-heading"><a href="@Url.Action("Leave_Reset_Settings", "Employee_Attendance")">Leave Reset Settings</a></div>
            <div class="link-descr">Configure automatic leave reset</div>
        </div>
        <div class="link-box">
            <div class="link-heading"><a href="@Url.Action("Employee_Leave_Reset_All", "Employee_Attendance")">Reset All</a></div>
            <div class="link-descr">Reset leave count for all</div>
        </div>
        <div class="link-box">
            <div class="link-heading"><a href="@Url.Action("Employee_Leave_Reset_By_Department", "Employee_Attendance")">Department Reset</a></div>
            <div class="link-descr">Reset employee leave count by dept</div>
        </div>
        <div class="link-box">
            <div class="link-heading"><a href="@Url.Action("Employee_Leave_Reset_By_Employee", "Employee_Attendance")">Individual Reset</a></div>
            <div class="link-descr">Reset employee leave count individually.</div>
        </div>

    </div>

</div>

