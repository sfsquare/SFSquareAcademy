
@{
    ViewBag.Title = "Transactions";
}

<div id="content-header">
    <img src="~/Content/images/show_finance.png" alt="Finance Logo">
    <h1>Finance Transactions</h1>
    <h3>Expences & Income</h3>
    <div id="app-back-button">
        <a href='javascript:history.back()' onclick="return confirm('are you sure?')"><img src="~/Content/images/buttons/back.png"></a>
    </div>
</div>
<div><img src="~/Content/images/_global/header_underline_.jpg" style="width:100%"></div>

<div id="page-yield">
    @if (ViewBag.ErrorMessage != null)
    {
        <p class="flash-msg"> @ViewBag.ErrorMessage </p>
    }
    <div class="box">
        <div class="link-box">
            <div class="link-heading">@Html.ActionLink("Add Expense", "Expense_Create")</div>
            <div class="link-descr">Create New Expense</div>
        </div>
        <div class="link-box">
            <div class="link-heading">@Html.ActionLink("Add Income", "Income_Create")</div>
            <div class="link-descr">Create New Income</div>
        </div>
        <div class="link-box">
            <div class="link-heading">@Html.ActionLink("Report", "Monthly_Report")</div>
            <div class="link-descr">Show Transactions</div>
        </div>
        <div class="link-box">
            <div class="link-heading">@Html.ActionLink("Compare Transactions", "Compare_Report")</div>
            <div class="link-descr">Compare Transactions</div>
        </div>
    </div>
</div>

